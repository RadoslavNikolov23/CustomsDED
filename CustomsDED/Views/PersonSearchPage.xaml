<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CustomsDED.ViewModels"
             xmlns:lang="clr-namespace:CustomsDED.Resources.Localization"
             x:Class="CustomsDED.Views.PersonSearchPage"
             x:DataType="viewmodels:PersonSearchViewModel"
             Title="{x:Static lang:AppResources.PersonSearch}"
             BackgroundColor="White">

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="iconemail.png"
                     Command="{Binding ReportAProblemCommand}"
                     Order="Primary"
                     Priority="0" />
    </ContentPage.ToolbarItems>
    
    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="10">

            <Frame
                    BackgroundColor="White"
                    BorderColor="Gray"
                    CornerRadius="12"
                    Padding="10">
                
                <VerticalStackLayout Spacing="10">
                    <Label Text="{x:Static lang:AppResources.EnterPersonInformation} "
                           FontSize="Small"/>
                    <Entry Placeholder="{x:Static lang:AppResources.EnterFirstLastPersonalId}"
                           Text= "{Binding EnterPersonInfoEntry, Mode=TwoWay}"/>
                    <Button Text="{x:Static lang:AppResources.Search}"
                            Command="{Binding SearchPersonCommand}"
                            BackgroundColor="SteelBlue"/>
                </VerticalStackLayout>
                
            </Frame>

            <CollectionView ItemsSource="{Binding PersonResultList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray"
                               Padding="10"
                               Margin="5">
                            <VerticalStackLayout Spacing="10">
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="{x:Static lang:AppResources.Name} "
                                    FontSize="Small"/>
                                    <Label Text="{Binding FirstName}" 
                                           TextColor="Black"
                                           FontAttributes="Bold"
                                           FontSize="Small"/>
                                    <Label Text="{Binding LastName}" 
                                           TextColor="Black"
                                           FontSize="Small"/>
                                </HorizontalStackLayout>
                                
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="{x:Static lang:AppResources.PersonalId} "
                                           FontSize="Small"/>
                                    <Label Text="{Binding PersonalId}" 
                                           TextColor="Black"
                                           FontSize="Small"/>
                                </HorizontalStackLayout>
                                
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="{x:Static lang:AppResources.DateOfCheck} "
                                           FontSize="Small"/>
                                    <Label Text="{Binding DateOfInspection, StringFormat='{0:yyyy/MM/dd}'}" 
                                           TextColor="Black"
                                           FontSize="Small"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>