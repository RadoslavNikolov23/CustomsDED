<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CustomsDED.ViewModels"
             xmlns:modelsPerson="clr-namespace:CustomsDED.DTOs.PersonDTOs;assembly=CustomsDED.DTOs"
             xmlns:modelsVehicle="clr-namespace:CustomsDED.DTOs.VehicleDTOs;assembly=CustomsDED.DTOs"
             xmlns:lang="clr-namespace:CustomsDED.Resources.Localization"
             x:Class="CustomsDED.Views.DateSearchPage"
             x:DataType="viewmodels:DateSearchViewModel"
             Title="{x:Static lang:AppResources.SearchByDate}"
             BackgroundColor="White">

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="iconemail.png"
                     Command="{Binding ReportAProblemCommand}"
                     Order="Primary"
                     Priority="0" />
    </ContentPage.ToolbarItems>

    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="20"
                                 Spacing="10">

                <Frame
                    BackgroundColor="White"
                    BorderColor="Gray"
                    CornerRadius="12"
                    Padding="10">

                    <VerticalStackLayout Spacing="10">

                        <Label Text="{x:Static lang:AppResources.PickDate}"
                               FontSize="Small"/>

                        <DatePicker Date="{Binding InspectionDatePicker}"/>

                        <Button Text="{x:Static lang:AppResources.Search}"
                                Command="{Binding SearchByDateCommand}"
                                BackgroundColor="SteelBlue"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame
                      BackgroundColor="White"
                      BorderColor="Gray"
                      CornerRadius="12"
                      Padding="10">

                    <VerticalStackLayout>
                        <Label Text="{x:Static lang:AppResources.Vehicles}"
                               FontAttributes="Bold"
                               FontSize="Small"/>

                        <CollectionView ItemsSource="{Binding DateVehiclesResultList}"
                                        IsVisible="{Binding DateVehicleResultFrame}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="modelsVehicle:VehicleGetDateDTO">
                                    <Frame
                                           BorderColor="GhostWhite"
                                           Padding="10"
                                           Margin="5">
                                        <ScrollView Orientation="Horizontal">
                                            
                                            <HorizontalStackLayout Spacing="10">
                                                <Label Text="{Binding LicensePlate}"
                                                       TextColor="Black"
                                                       FontAttributes="Bold"/>
                                                <Label Text="{Binding AdditionalInfo}"
                                                       TextColor="Black"/>

                                                <Border/>
                                                <Label Text="{Binding DateOfInspection}"
                                                       TextColor="Black"/>
                                            </HorizontalStackLayout>
                                        </ScrollView>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <Frame BorderColor="GhostWhite"
                               Padding="10"
                               Margin="5"
                               IsVisible="{Binding IsEmptyVehicleListVisible}">

                            <Label Text="{Binding IsEmptyVehicleList}"
                                   TextColor="Black"
                                   FontAttributes = "Italic"/>
                        </Frame>

                    </VerticalStackLayout>
                </Frame>

                <Frame
                       BackgroundColor="White"
                       BorderColor="Gray"
                       CornerRadius="12"
                       Padding="10">

                    <VerticalStackLayout>
                        <Label Text="{x:Static lang:AppResources.Persons}"
                               FontAttributes="Bold"
                               FontSize="Small"/>

                        <CollectionView  ItemsSource="{Binding DatePersonResultList}"
                                         IsVisible="{Binding DatePersonResultFrame}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="modelsPerson:PersonGetDateDTO">
                                    <Frame  BorderColor="GhostWhite"
                                            Padding="10"
                                            Margin="5">
                                        <ScrollView Orientation="Horizontal">
                                            <HorizontalStackLayout Spacing="10">
                                                <Label Text="{Binding FirstName}"
                                                       TextColor="Black"
                                                       FontAttributes="Bold"/>

                                                <Label Text="{Binding LastName}"
                                                       TextColor="Black"/>

                                                <Border/>
                                                <Label Text="{Binding DateOfInspection, StringFormat='{0:G}', TargetNullValue='N/A'}"
                                                       TextColor="Black"/>
                                            </HorizontalStackLayout>
                                        </ScrollView>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <Frame BorderColor="GhostWhite"
                               Padding="10"
                               Margin="5"
                               IsVisible="{Binding IsEmptyPersonListVisible}">

                            <Label Text="{Binding IsEmptyPersonList}"
                                   TextColor="Black"
                                   FontAttributes="Italic"
                                   HorizontalOptions="Center" />
                        </Frame>

                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <BoxView HeightRequest="2"
                 BackgroundColor="Black"
                 VerticalOptions="End"
                 HorizontalOptions="FillAndExpand"/>

        <BoxView HeightRequest="2"
                 BackgroundColor="Black"
                 VerticalOptions="Start"
                 HorizontalOptions="FillAndExpand"/>

    </Grid>
</ContentPage>