<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CustomsDED.ViewModels"
             xmlns:lang="clr-namespace:CustomsDED.Resources.Localization"
             x:Class="CustomsDED.Views.VehicleSearchPage"
             x:DataType="viewmodels:VehicleSearchViewModel"
             Title="Vehicle Search"
             BackgroundColor="White">


    <ScrollView>
        <VerticalStackLayout Padding="20"
                                      Spacing="10">

            <Frame
                    BackgroundColor="White"
                    BorderColor="Gray"
                    CornerRadius="12"
                    Padding="10">
                <VerticalStackLayout Spacing="10">
                    
                    <Label Text="Enter Vehicle License Plate:"
                           FontSize="Small"/>
                    
                    <Entry Placeholder="Enter License Plate or Info"
                           Text="{Binding EnterLicensePlateEntry, Mode=TwoWay}"/>
                    <Button Text="Search"
                            Command="{Binding SearchVehicleCommand}"
                            BackgroundColor="SteelBlue"/>
                </VerticalStackLayout>
            </Frame>

            <CollectionView ItemsSource="{Binding VehiclesResultList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray"
                               Padding="10"
                               Margin="5">
                            <VerticalStackLayout Spacing="10">
                                
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="Vehicle Number:"
                                           FontSize="Small"/>
                                    <Label Text="{Binding LicensePlate}" 
                                           TextColor="Black"
                                           FontAttributes="Bold"
                                           FontSize="Small"/>
                                </HorizontalStackLayout>
                                
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="Addition Info:"
                                           FontSize="Small"/>
                                    <Label Text="{Binding AdditionalInfo}" 
                                           TextColor="Black"
                                           FontSize="Small"/>
                                </HorizontalStackLayout>
                                
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="Date of Check: "
                                           FontSize="Small"/>
                                    <Label Text="{Binding DateOfInspection, StringFormat='{0:yyyy/MM/dd}'}" 
                                           TextColor="Black"
                                           FontSize="Small"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>