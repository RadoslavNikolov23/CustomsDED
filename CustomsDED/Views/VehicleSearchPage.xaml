<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:CustomsDED.DTOs.VehicleDTOs;assembly=CustomsDED.DTOs"
             xmlns:viewmodels="clr-namespace:CustomsDED.ViewModels"
             xmlns:lang="clr-namespace:CustomsDED.Resources.Localization"
             x:Class="CustomsDED.Views.VehicleSearchPage"
             x:DataType="viewmodels:VehicleSearchViewModel"
             Title="{x:Static lang:AppResources.VehicleSearch}"
             BackgroundColor="White">

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="iconemail.png"
                     Command="{Binding ReportAProblemCommand}"
                     Order="Primary"
                     Priority="0" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="10">

            <Frame
                    BackgroundColor="White"
                    BorderColor="Gray"
                    CornerRadius="12"
                    Padding="10">
                <VerticalStackLayout Spacing="10">

                    <Label Text="{x:Static lang:AppResources.EnterVehicleLicensePlate}"
                           FontSize="Small"/>

                    <Entry Placeholder="{x:Static lang:AppResources.EnterLicensePlateInfo}"
                           Text="{Binding EnterLicensePlateEntry, Mode=TwoWay}"/>
                    <Button Text="{x:Static lang:AppResources.Search}"
                            Command="{Binding SearchVehicleCommand}"
                            BackgroundColor="SteelBlue"/>
                </VerticalStackLayout>
            </Frame>

            <CollectionView ItemsSource="{Binding VehiclesResultList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:VehicleGetPlateDTO">
                        <Frame BorderColor="Gray"
                               Padding="10"
                               Margin="5">
                            <VerticalStackLayout Spacing="10">
                                <ScrollView Orientation="Horizontal">
                                    <HorizontalStackLayout Spacing="10">
                                        <Label Text="{x:Static lang:AppResources.VehicleNumber}"
                                           FontSize="Small"/>
                                        <Label Text="{Binding LicensePlate}" 
                                           TextColor="Black"
                                           FontAttributes="Bold"
                                           FontSize="Small"/>
                                    </HorizontalStackLayout>
                                </ScrollView>
                                <ScrollView Orientation="Horizontal">
                                    <HorizontalStackLayout Spacing="10">
                                        <Label Text="{x:Static lang:AppResources.AdditionInfo}"
                                           FontSize="Small"/>
                                        <Label Text="{Binding AdditionalInfo}" 
                                           TextColor="Black"
                                           FontSize="Small"/>
                                    </HorizontalStackLayout>
                                </ScrollView>
                                <ScrollView Orientation="Horizontal">
                                    <HorizontalStackLayout Spacing="10">
                                        <Label Text="{x:Static lang:AppResources.DateOfCheck} "
                                           FontSize="Small"/>
                                        <Label Text="{Binding DateOfInspection, StringFormat='{0:G}', TargetNullValue='N/A'}" 
                                           TextColor="Black"
                                           FontSize="Small"/>
                                    </HorizontalStackLayout>
                                </ScrollView>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>