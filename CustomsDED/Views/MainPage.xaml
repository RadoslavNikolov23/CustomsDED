<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:CustomsDED.Views"
       x:Class="CustomsDED.MainPage"
       Shell.BackgroundColor="SteelBlue"
       Shell.ForegroundColor="White"
       Shell.TabBarBackgroundColor="SteelBlue"
       Shell.TabBarForegroundColor="White"
       Shell.TabBarUnselectedColor="Black"
       Shell.TabBarTitleColor="AntiqueWhite">

    <TabBar>
        <ShellContent Icon="vehichlesave.png"
                      ContentTemplate="{DataTemplate views:LicensePlatePage}" />

        <ShellContent Icon="personsave.png"
                      ContentTemplate="{DataTemplate views:MrzPersonPage}" />

        <ShellContent Icon="vehiclecheck.png"
                      ContentTemplate="{DataTemplate views:VehicleSearchPage}" />

        <ShellContent Icon="personcheck.png"
                      ContentTemplate="{DataTemplate views:PersonSearchPage}" />

        <ShellContent Icon="datecheck.png"
                      ContentTemplate="{DataTemplate views:DateSearchPage}" />
    </TabBar>

</Shell>
